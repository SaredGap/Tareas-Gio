<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_dark"
    
    >


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Restaurante"
        android:textStyle="italic"
        android:layout_marginLeft="100dp"
       android:layout_marginBottom="15dp"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        />

    <TextView
        android:layout_width="195.0dp"
        android:layout_height="wrap_content"
        android:text="Acceso A La Area De Los Sensores De La Cocina"
        android:textStyle="normal"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/white"
        />

    <Button
        android:layout_width="276.5dp"
        android:layout_height="51.5dp"
        android:text="Cocina"
        android:id="@+id/btnUno"
        android:onClick="onClickWebBrowser"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@android:color/darker_gray"
        />

    <TextView
        android:layout_width="195.0dp"
        android:layout_height="wrap_content"
        android:text="Acceso A La Area De Los Sensores Del Comedor"
        android:textStyle="normal"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/white"
        />

    <Button
        android:layout_width="276.5dp"
        android:layout_height="51.5dp"
        android:text="Comedor"
        android:id="@+id/btnDos"
        android:onClick="onClickMakeCalls"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@android:color/darker_gray"
        />

    <TextView
        android:layout_width="195.0dp"
        android:layout_height="wrap_content"
        android:text="Acceso A La Area De Los Sensores De Recursos Humanos"
        android:textStyle="normal"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/white"
        />

    <Button
        android:layout_width="276.5dp"
        android:layout_height="51.5dp"
        android:text="Recursos Humanos"
        android:id="@+id/btnTres"
        android:onClick="onClickWebBrowser"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@android:color/darker_gray"
        />

    <TextView
        android:layout_width="195.0dp"
        android:layout_height="wrap_content"
        android:text="Acceso A La Area De Los Sensores Del Estacionamiento"
        android:textStyle="normal"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="15dp"
        android:textColor="@android:color/white"
        />

    <Button
        android:layout_width="276.5dp"
        android:layout_height="51.5dp"
        android:text="Estacionamiento"
        android:id="@+id/btnCuatro"
        android:onClick="onClickMakeCalls"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@android:color/darker_gray"
        />


    

</LinearLayout>